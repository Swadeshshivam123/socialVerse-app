<link rel="stylesheet" href="/css/user_profile.css">

<h1>socialVerse / <%= title %></h1>

<!-- If the user logged in is the same as the profie of the user we're visiting, then show the form to update user's details -->
<% if(user.id==profile_user.id) { %>
     
    <form action="/users/update/<%= profile_user.id %>" method="POST">
        <input type="text" name="name" placeholder="Enter your Name..." value="<%= profile_user.name %>" required>
        <input type="email" name="email" placeholder="Enter your Email..." value="<%= profile_user.email %>" required>
        <input type="submit" value="Update">
    </form>
      
    <% } else { %>
<!-- Else, show only profile info. --> 

    <p>Name: <%= profile_user.name %></p>
    <p>Email: <%= profile_user.email %></p>

    <% } %>

<script src="/js/user_profile.js"></script>